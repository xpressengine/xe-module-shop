<query id="insertProductCategory" action="insert">
    <tables>
        <table name="product_categories" />
    </tables>
    <columns>
        <column name="product_category_srl" var="product_category_srl" filter="number" notnull="notnull" />
        <column name="module_srl" var="module_srl" filter="number" notnull="notnull" />
        <column name="parent_srl" var="parent_srl" filter="number" default="0" />
        <column name="file_srl" var="parent_srl" filter="number" />
        <column name="title" var="title" notnull="notnull" />
        <column name="description" var="description" />
        <column name="product_count" var="product_count" />
        <column name="friendly_url" var="friendly_url" />
        <column name="browser_title" var="browser_title" />
        <column name="include_in_navigation_menu" var="include_in_navigation_menu" />
        <column name="regdate" var="regdate" default="curdate()" />
        <column name="last_update" var="last_update" default="curdate()" />
    </columns>
</query>

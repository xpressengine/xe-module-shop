<?xml version="1.0" encoding="utf-8"?>
<ruleset version="1.5.0">
    <customrules>
        <rule name = "float" type = "regex" test = "/^-?(?:\d+|\d*\.\d+)$/"/>
        <rule name = "alpha_" type = "regex" test = "/^[a-z][a-z0-9-_]*$/i"/>
    </customrules>
    <fields>
        <field name="title" required="true" length="3:250" />
        <field name="in_stock" required="true"  />
        <field name="status" required="true"  />
        <field name="price" required="true" rule="float" lenght="1:20" />
        <field name="discount_price" required="true" rule="float" lenght="1:20" />
        <field name="weight" required="true" rule="float" lenght="1:20" />
        <field name="qty" required="true" rule="float" lenght="1:20" />
        <field name="sku" required="true" rule="alpha_" length="1:20" />
        <field name="friendly_url" required="true" rule="alpha_" lenght="1:50"/>
    </fields>
</ruleset>
